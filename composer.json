        "solution10/circuitbreaker": "^1.0",
        "bbc/ipr-cache": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.0",
        "squizlabs/php_codesniffer": "^2.0",
        "silex/silex": "^2.0",
        "silex/web-profiler": "^2.0",
        "symfony/dom-crawler": "^3.0",
        "symfony/css-selector": "^3.0"
    },
    "autoload": {
